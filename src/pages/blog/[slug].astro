---
import { getCollection, getEntryBySlug } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
  }));
}

const { slug } = Astro.params;
console.log("ğŸ” Building page for slug:", slug);

const post = await getEntryBySlug('blog', slug);

if (!post) {
  console.error("âŒ Post not found for slug:", slug);
  throw new Error(`Post not found for slug: ${slug}`);
}

const rendered = await post.render();

if (!rendered || !rendered.Content || !rendered.data) {
  console.error("âŒ Post.render() returned invalid content for slug:", slug);
  throw new Error("Post content could not be rendered.");
}

const { Content, data } = rendered;
---

<html lang="en">
  <head>
    <title>{data.title}</title>
  </head>
  <body>
    <main>
      <h1>{data.title}</h1>
      <p><em>{data.description}</em></p>
      <article>
        <Content />
      </article>
    </main>
  </body>
</html>
